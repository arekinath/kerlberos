{deps, [
	{pbkdf2, "2.0.0"},
	{neotoma, "1.7.3"}
]}.
{plugins, [
	rebar3_hex,
	{provider_asn1, "0.2.3"}
]}.
{provider_hooks, [{pre, [{compile, {asn, compile}}]},
                  {post, [{clean, {asn, clean}}]}]}.
{asn1_args, [{encoding, ber}, {compile_opts, [ber, der, undec_rest]}]}.
{escript_name, "login_kerlberos"}.
{escript_shebang, "#!/bin/ksh\n"}.
{escript_comment, "%% 2>/dev/null; exec /usr/bin/env HOME=/var/empty TERM=vt100 escript \"$0\" \"$@\"\n"}.
{escript_incl_apps, [neotoma, pbkdf2]}.
{escript_emu_args, "%%! -smp disable -kernel error_logger silent\n"}.
{shell, [{apps, [kerlberos]}]}.
